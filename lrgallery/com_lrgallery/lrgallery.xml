<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade"> 
    <name>Lightroom Gallery</name>

    <creationDate>January, 2011</creationDate>
    <author>Art Kuznetsov</author>
    <authorEmail>artyomkuznetsov@ya.ru</authorEmail>
    <version>0.0.1</version>
    <description>Lightroom gallery web service</description>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>

    <files folder="site">
        <filename>index.html</filename>
        <filename>lrgallery.php</filename>
        <filename>controller.php</filename>
        <folder>models</folder>
        <folder>views</folder>        
        <folder>controllers</folder>
    </files>

    <administration>
        <menu>Lightroom Gallery</menu>		
        <files folder="admin">
            <filename>index.html</filename>
            <filename>lrgallery.php</filename>
            <filename>controller.php</filename>
            <folder>sql</folder>
            <folder>models</folder>
            <folder>views</folder>        
            <folder>controllers</folder>
        </files>
    </administration> 
</extension>